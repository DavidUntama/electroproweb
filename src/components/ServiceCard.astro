---
interface Props {
  title: string;
  description: string;
  icon: string; // Nombre del ícono de Font Awesome (ej: "fa-tools")
  link: string;
}

const { title, description, icon, link } = Astro.props;
---
<div class="service-card bg-white rounded-lg p-6 shadow-md hover:shadow-lg transition-shadow duration-300">
  <i class={`fas ${icon} text-4xl mb-4 text-[var(--accent-color)]`}></i>
  <h3 class="text-xl font-semibold text-gray-800 mb-2">{title}</h3>
  <p class="text-gray-600 mb-4">{description}</p>
  <a href={link} class="text-[var(--accent-color)] hover:text-[var(--accent-color-dark)] font-medium transition-colors duration-300">
    Ver más <i class="fas fa-arrow-right ml-1"></i>
  </a>
</div>